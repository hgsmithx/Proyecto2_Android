<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fast_food_menu"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnSandwiches"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_marginTop="176dp"
        android:background="@drawable/shadow"
        android:onClick="Sandwiches"
        android:text="@string/btnsandwich"
        android:textColor="@color/Letras"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSobreNosotros"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:background="@drawable/shadow"
        android:onClick="SobreNosotros"
        android:text="@string/btnsobrenosotros"
        android:textColor="@color/Letras"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSandwiches"
        app:layout_constraintVertical_bias="0.131" />

</androidx.constraintlayout.widget.ConstraintLayout>